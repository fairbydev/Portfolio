<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFD54F"
    tools:context="com.teamnova.jaepark.travelmate.activities.LoginActivity">



    <RelativeLayout
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRAVEL MATE"
            android:textSize="40dp"
            android:fontFamily="casual"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/activity_login_label"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/activity_login_label"
            android:layout_marginTop="40dp"
            android:layout_alignStart="@+id/activity_login_label"
            android:layout_alignEnd="@+id/activity_login_label"
            >



            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="23dp"
                android:fontFamily="casual"
                android:id="@+id/activity_login_idEditText"
                android:textColor="@android:color/black"
                android:background="@drawable/rounded_edittext"
                android:focusable="true"
                android:hint=" 이메일 입력"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_white"
                android:textSize="23dp"
                android:fontFamily="casual"
                android:inputType="textPassword"
                android:id="@+id/activity_login_pwEditText"
                android:maxLength="30"
                android:textColor="@android:color/black"
                android:gravity="left|center_vertical"
                android:maxWidth="280dp"
                android:hint="비밀번호 입력"/>

            <CheckBox
                android:text="자동로그인"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_login_checkBox"/>



            <Button
                android:background="@drawable/rounded_button_yellow"
                android:text="로그인"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="60dp"
                android:id="@+id/activity_login_loginBtn" />

            <Button
                android:background="@drawable/rounded_button_yellow"
                android:text="회원가입"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:id="@+id/activity_login_registerBtn"/>

            <com.facebook.login.widget.LoginButton
                android:layout_below="@+id/label"
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp" />

        </TableLayout>



    </RelativeLayout>


</RelativeLayout>
