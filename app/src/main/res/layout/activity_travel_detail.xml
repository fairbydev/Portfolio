<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamnova.jaepark.travelmate.activities.TravelMenu.TravelDetailActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#ffffff">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                    android:id="@+id/activity_travelDetail_ImgViewpager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />


                <com.viewpagerindicator.CirclePageIndicator
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/activity_travelDetail_ImgViewpager"
                    android:id="@+id/activity_travelDetail_indicator_indicator"
                    android:layout_height="20dp"
                    android:layout_width="60dp"
                    android:layout_marginTop="-20dp"
                    android:padding="-5dp"
                    app:fillColor="@color/bpDarker_blue"
                    app:strokeColor="#ffffff"
                    />

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/activity_travelDetail_title_TV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="title 여행 타이틀 들어갈 곳"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:background="#0091EA"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="30dp"
                        android:text="여행정보"
                        android:textColor="#ffffff"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rounded_button_blue"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/activity_travelDetail_edit_Button"
                        android:layout_gravity="end"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="수정 및 삭제"
                        android:textSize="15dp"
                        android:background="@drawable/rounded_button_yellow"
                        android:textColor="#ffffff"
                        />

                </LinearLayout>


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <TableRow
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_date_range_grey_24dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:id="@+id/activity_travelDetail_date_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="여행기간 들어갈 곳"
                            android:textSize="18dp"
                            android:textColor="#757575"
                            />

                    </TableRow>


                    <TableRow
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_location_on_grey_48dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:id="@+id/activity_travelDetail_place_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="여행장소 들어갈 곳"
                            android:textSize="18dp"
                            android:textColor="#757575"
                            />

                    </TableRow>


                    <TableRow
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_person_add_grey_48dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:id="@+id/activity_travelDetail_maxPerson_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="여행인원 들어갈 곳"
                            android:textSize="18dp"
                            android:textColor="#757575"
                            />

                    </TableRow>


                    <TableRow
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_monetization_on_grey_48dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:id="@+id/activity_travelDetail_cost_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="여행비용 들어갈 곳"
                            android:textSize="18dp"
                            android:textColor="#757575"
                            />

                    </TableRow>


                    <TableRow
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_wc_grey_48dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:id="@+id/activity_travelDetail_gender_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="여행성별 들어갈 곳"
                            android:textSize="18dp"
                            android:textColor="#757575"
                            />

                    </TableRow>


                    <TableRow
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_insert_emoticon_grey_48dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:id="@+id/activity_travelDetail_age_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="연령제한 들어갈 곳"
                            android:textSize="18dp"
                            android:textColor="#757575"
                            />

                    </TableRow>

                </TableLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:text="상세설명"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/rounded_button_blue"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/activity_travelDetail_briefing_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="상세설명 들어갈 곳 "
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/rounded_button_gray"
                    android:gravity="center"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/activity_travelDetail_chat_Button"
                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:text="채팅 참여하기"
                    android:textSize="25dp"
                    android:background="@drawable/rounded_button_red"
                    />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
