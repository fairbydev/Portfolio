<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:paddingRight="10sp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    android:id="@+id/chat_recycler_me_CL">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3sp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/recycler_item_me_Msg_TV">

        <TextView
            android:id="@+id/recycler_item_me_unread_TV"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:hint="unread_TV"
            android:textColor="#ffeb3b"
            android:textColorHint="#ffeb3b"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/recycler_item_me_timestamp_TV"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:hint="timestamp"
            android:textColor="#757575"
            android:textColorHint="#757575"
            android:textSize="10sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/recycler_item_me_Msg_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_grey_chat_input"
        android:textSize="15sp"
        android:hint="room for msg"
        android:maxWidth="350sp"
        android:textColorHint="#000000"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:breakStrategy="simple"
        />

</android.support.constraint.ConstraintLayout>
