<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/cardview_light_background"
    android:id="@+id/layout_frag_3">

    <LinearLayout
        android:id="@+id/fragment_menu_mypage_actionBar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/square_button_yellow">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="마이페이지"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        <!--<ImageView-->
            <!--android:layout_width="45dp"-->
            <!--android:layout_height="45dp"-->
            <!--android:layout_gravity="center_vertical|end"-->
            <!--android:src="@drawable/ic_add_black_24dp"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:padding="5dp"/>-->

    </LinearLayout>

    <ScrollView
        android:layout_below="@id/fragment_menu_mypage_actionBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E0E0E0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragment_menu_mypage_profilePic_ImgView"
                    android:layout_marginTop="20dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_account_circle_black_48dp"/>

                <TextView
                    android:id="@+id/fragment_menu_mypage_nicknameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nickname"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/fragment_menu_mypage_otherInfoTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="age, Gender"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/fragment_menu_mypage_infoEditBtn"
                        android:text="정보수정"
                        android:background="@drawable/rounded_button_blue"
                        android:textColor="#ffffff"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        />

                    <Button
                        android:id="@+id/fragment_menu_mypage_logOutBtn"
                        android:text="로그아웃"
                        android:background="@drawable/rounded_button_yellow"
                        android:textColor="#000000"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="5dp"
                        />




                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="설정"
                    android:textColor="#757575"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_weight="0.8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="푸시알림설정"
                            android:textColor="#000000"/>

                        <Switch
                            android:layout_weight="0.3"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="0.8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="기타 설정"
                            android:textColor="#000000"/>

                        <Switch
                            android:layout_weight="0.3"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:orientation="vertical">-->

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="내가 등록한 여행"-->
                    <!--android:textColor="#757575"-->
                    <!--android:textSize="18dp"-->
                    <!--android:layout_marginLeft="10dp"/>-->

                <!--<ListView-->
                    <!--android:id="@+id/fragment_menu_mypage_myListView"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->


                <!--</ListView>-->

            <!--</LinearLayout>-->



        </LinearLayout>



    </ScrollView>



</RelativeLayout>
