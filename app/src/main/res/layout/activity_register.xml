<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFD54F"
    tools:context="com.teamnova.jaepark.travelmate.activities.Signin.registerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="40dp"
        android:fontFamily="casual"
        android:textColor="#FF9800"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/activity_register_labelTv"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="0dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColorHint="#FF9100"
            android:ems="10"
            android:hint="이메일"
            android:textColor="#000000"
            android:id="@+id/activity_register_idEditText" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="이메일은 비밀번호 분실 시에도 사용됩니다."
            android:textSize="13dp"
            android:textColor="#A1887F"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColorHint="#FF9100"
            android:textColor="#000000"
            android:ems="1"
            android:hint="비밀번호"
            android:id="@+id/activity_register_passwordEditText" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text=" 영문,숫자,특수문자를 포함 8자~20자로 작성해주세요"
            android:textSize="13dp"
            android:textColor="#A1887F"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-10dp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:textColorHint="#FF9100"
            android:textColor="#000000"
            android:hint="비밀번호 확인"
            android:layout_marginTop="10dp"
            android:id="@+id/activity_register_passwordConfirmEditText" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text=" 비밀번호를 한번 더 입력해주세요"
            android:textSize="13dp"
            android:textColor="#A1887F"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColorHint="#FF9100"
            android:textColor="#000000"
            android:hint="닉네임"
            android:layout_marginTop="10dp"
            android:maxLength="15"
            android:id="@+id/activity_register_nicknameEditText" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text=" 다른 사람들에게 보여질 닉네임을 입력하세요"
            android:textSize="13dp"
            android:textColor="#A1887F"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-10dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAlignedChildIndex="0"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:text="성별선택: "
                android:textSize="20dp"
                android:textColor="#FF9100"
                android:layout_weight="0.9"
                />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:layout_weight="0.4"
                android:background="@drawable/rounded_button_yellow_base"
                android:id="@+id/activity_register_genderSpinnrer"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAlignedChildIndex="0"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="생년월일: "
                    android:textSize="20dp"
                    android:textColor="#FF9100"
                    android:layout_weight="0.3"
                    />

                <EditText
                    android:layout_marginRight="-5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:id="@+id/activity_register_dateEditText"
                    android:layout_weight="0.5"/>

                <Button
                    android:background="@drawable/square_button_yellow"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="선택"
                    android:id="@+id/activity_register_dateBtn"
                    android:layout_weight="0.2"
                    />


        </LinearLayout>

        <Button
            android:background="@drawable/rounded_button_yellow"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가입하기"
            android:id="@+id/activity_register_submitBtn" />


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="성별과 생일은 향후 메이트 검색을 위해 사용됩니다"
            android:textSize="13dp"
            android:textColor="#A1887F"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/activity_register_cautionTv"

            />


     </LinearLayout>



</LinearLayout>
