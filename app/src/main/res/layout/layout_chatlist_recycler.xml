<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="5sp"
    android:layout_marginBottom="2sp">

    <RelativeLayout
        android:id="@+id/layout_chatlist_recycler_topbar_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10sp">

        <TextView
            android:id="@+id/layout_chatlist_recycler_title_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Place(HostNickname)"
            android:textStyle="italic"
            android:textColorHint="#000000"
            android:textColor="#FB8C00"
            android:textSize="20sp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/layout_chatlist_recycler_serverReceiveTime_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="serverReceiveTime"
            android:textColorHint="#000000"
            android:textSize="13sp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3sp"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="10sp">

        <ImageView
            android:id="@+id/layout_chatlist_recycler_propic_IV"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15sp">

            <TextView
                android:id="@+id/layout_chatlist_recycler_senderNick_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="senderNick"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textColorHint="@color/bpLight_gray"
                android:layout_marginTop="5sp"/>

            <TextView
                android:id="@+id/layout_chatlist_recycler_talkContent_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Talk Content"
                android:textColorHint="@color/bpLight_gray"
                />

        </LinearLayout>


    </LinearLayout>



</LinearLayout>
